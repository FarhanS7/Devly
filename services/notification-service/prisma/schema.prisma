generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id          String   @id @default(uuid())
  type        NotificationType
  actorId     String
  recipientId String
  postId      String?
  messageId   String?
  message     String
  seen        Boolean   @default(false)
  createdAt   DateTime  @default(now())

  @@index([recipientId])
}

enum NotificationType {
  FOLLOW
  LIKE
  COMMENT
  MESSAGE_REACTION
  SYSTEM
  TASK_ASSIGNED
  TASK_COMPLETED
  PROJECT_INVITE
  PROJECT_UPDATE
}
