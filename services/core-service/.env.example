# ===========================================
# üîê CORE SERVICE ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# ----- Database -----
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/devconnect?schema=public"

# ----- JWT Authentication -----
# CRITICAL: Change these secrets in production! Use strong random strings.
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"

# JWT expiration times
JWT_EXPIRES_IN="15m"           # Access token lifetime
JWT_REFRESH_EXPIRES_IN="7d"    # Refresh token lifetime

# ----- Redis (for Bull queues) -----
REDIS_HOST="redis"
REDIS_PORT="6379"

# ----- Server Configuration -----
PORT="3000"
NODE_ENV="development"

# ----- CORS Configuration -----
# In production, set this to your frontend domain(s)
# Multiple origins: "https://app.example.com,https://www.example.com"
CORS_ORIGIN="*"

# ----- File Upload -----
MAX_FILE_SIZE="5242880"  # 5MB in bytes

# ----- Rate Limiting -----
THROTTLE_TTL="60"        # Time window in seconds
THROTTLE_LIMIT="100"     # Max requests per TTL
